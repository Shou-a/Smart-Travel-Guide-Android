<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="15dp"
        android:layout_marginBottom="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:background="@drawable/weather_bg"
            android:padding="10dp"
            android:paddingStart="20dp"

            >
                <TextView
                    android:id="@+id/weather_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="On : 02-May-2023 at : 02:00 "
                    android:textSize="22dp"
                    android:textColor="@color/white"
                    />

            <TextView
                android:id="@+id/weather_disc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/weather_title"
                android:layout_marginTop="8dp"
                android:text="Partially cloudy"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/weather_humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/weather_air"
                android:layout_marginTop="12dp"
                android:text="Humidity : 20.0%"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/humidity"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/weather_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/weather_disc"
                android:layout_marginTop="5dp"
                android:text="temp : 20.0%"
                android:drawableLeft="@drawable/waves"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/weather_air"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/weather_temp"
                android:drawableLeft="@drawable/baseline_air_24"
                android:layout_marginTop="5dp"
                android:text="Air : 20.0%"
                android:textColor="@color/white"
                android:textSize="16dp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>